<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/helloFragment">

    <fragment
        android:id="@+id/helloFragment"
        android:name="com.example.androidmessenger.HelloFragment"
        android:label="fragment_hello"
        tools:layout="@layout/fragment_hello" >
        <action
            android:id="@+id/action_helloFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_helloFragment_to_logInFragment2"
            app:destination="@id/logInFragment" />
    </fragment>
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.androidmessenger.logInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in" >
        <action
            android:id="@+id/action_logInFragment_to_passwordRecFragment"
            app:destination="@id/passwordRecFragment" />
        <action
            android:id="@+id/action_logInFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.androidmessenger.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
    </fragment>
    <fragment
        android:id="@+id/passwordRecFragment"
        android:name="com.example.androidmessenger.PasswordRecFragment"
        android:label="fragment_password_rec"
        tools:layout="@layout/fragment_password_rec" >
        <action
            android:id="@+id/action_passwordRecFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.androidmessenger.MainScreenFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_main_screen" >
        <action
            android:id="@+id/action_menuFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
        <action
            android:id="@+id/action_menuFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_menuFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.androidmessenger.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.androidmessenger.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" >
        <action
            android:id="@+id/action_chatFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.androidmessenger.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" />
    <fragment
        android:id="@+id/viewPagerChatsFragment"
        android:name="com.example.androidmessenger.ViewPagerChatsFragment"
        android:label="fragment_view_pager_chats"
        tools:layout="@layout/fragment_view_pager_chats" />
    <fragment
        android:id="@+id/viewPagerContactsFragment"
        android:name="com.example.androidmessenger.ViewPagerContactsFragment"
        android:label="fragment_view_pager_contacts"
        tools:layout="@layout/fragment_view_pager_contacts" />
</navigation>